<?xml version="1.0" encoding="utf-8"?>
<!-- using frame layout to get more reliable positioning of elements in a more complex layout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <!-- Registration textview at top of the app
     set id
     set content dimensions
     set layout positioning
     customise text-->
    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="top|center"
        android:layout_marginTop="20dp"

        android:text="@string/registration"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <!-- email edit text
     set id
     set content dimensions
     set layout positioning
     set hint
     set input type
     no autofill-->
    <EditText
        android:id="@+id/dobEditText"

        android:layout_width="288dp"
        android:layout_height="wrap_content"

        android:layout_gravity="top|end"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"

        android:hint="@string/date_of_birth"

        android:importantForAutofill="no"

        android:inputType="date" />

    <!-- edit text for user first name
     set id
     set content dimensions
     set layout placement
     set hint
     set input type
     no autofill-->
    <EditText
        android:id="@+id/emailEditText"

        android:layout_width="288dp"
        android:layout_height="wrap_content"

        android:layout_gravity="top|start"
        android:layout_marginStart="50dp"
        android:layout_marginTop="190dp"
        android:gravity="center"

        android:hint="@string/email"

        android:importantForAutofill="no"

        android:inputType="textEmailAddress" />

    <!-- edit text for user last name
     set id
     set content dimensions
     set layout placement
     set hint
     set input type
     no autofill-->
    <EditText
        android:id="@+id/fnameEditText"

        android:layout_width="288dp"
        android:layout_height="wrap_content"

        android:layout_gravity="top|start"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:gravity="center"

        android:hint="@string/first_name"

        android:importantForAutofill="no"

        android:inputType="textPersonName" />

    <!-- edit text for user date of birth
     set id
     set content dimensions
     set layout positioning
     set hint
     set input type
     no autofill-->
    <EditText
        android:id="@+id/lnameEditText"

        android:layout_width="288dp"
        android:layout_height="wrap_content"

        android:layout_gravity="top|start"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:gravity="center"

        android:hint="@string/last_name"

        android:importantForAutofill="no"

        android:inputType="textPersonName" />

    <!-- date format text view to inform the user how to input their birth date
     set id
     set content dimensions
     set layout positioning
     set and customise text-->
    <TextView
        android:id="@+id/dateFormatTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="end|center"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="160dp"

        android:text="@string/mm_dd_yyyy"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="italic" />

    <!-- edit text for password
     set id
     set content dimensions
     set layout placement
     set hint
     set input type
     no autofill-->
    <EditText
        android:id="@+id/regPassEditText"

        android:layout_width="288dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="50dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:layout_gravity="top|end"

        android:hint="@string/password"

        android:importantForAutofill="no"

        android:inputType="textPassword" />

    <!-- edit text for confirmation password
     set id
     set content dimensions
     set layout placement
     set hint
     set input type
     no autofill-->
    <EditText
        android:id="@+id/confPassEditText"

        android:layout_width="288dp"
        android:layout_height="wrap_content"

        android:layout_gravity="top|end"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="190dp"
        android:gravity="center"

        android:hint="@string/confirm_password"

        android:importantForAutofill="no"

        android:inputType="textPassword" />

    <!-- button to check if info is valid and add user to database
     set id
     set content dimensions
     set layout placement
     set text-->
    <Button
        android:id="@+id/registerButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"

        android:text="@string/register" />

    <!-- added an image to make the app look nicer
     set id
     set content dimensions
     set content description and source-->
    <ImageView
        android:id="@+id/coolMageImageView"

        android:layout_width="140dp"
        android:layout_height="228dp"

        android:layout_gravity="center"

        android:contentDescription="@string/cool_mage_pointing_to_the_register_button"
        android:src="@drawable/coolmage" />


</FrameLayout>