<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="20dp"
        android:text="@string/registration"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:id="@+id/dobEditText"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="70dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:hint="@string/date_of_birth"
        android:importantForAutofill="no"
        android:inputType="date" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:hint="@string/email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/fnameEditText"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:hint="@string/first_name"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/lnameEditText"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:hint="@string/last_name"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="160dp"
        android:text="@string/mm_dd_yyyy"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/regPassEditText"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:layout_gravity="top|end"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confPassEditText"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginRight="50dp"
        android:layout_marginTop="190dp"
        android:hint="@string/confirm_password"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"
        android:text="@string/register" />

    <ImageView
        android:id="@+id/coolMageImageView"
        android:layout_width="140dp"
        android:layout_height="228dp"
        android:layout_gravity="center"
        android:contentDescription="@string/cool_mage_pointing_to_the_register_button"
        android:src="@drawable/coolmage" />


</FrameLayout>